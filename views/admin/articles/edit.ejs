<div class="container">
    <hr>
    <div class="card">
        <div class="card-header">
            <h2>UPDATE DO ARTIGO <%=article.title%></h2>
        </div>  
    <div class="card-body" >
        <form method="POST" action="/articles/update">
            <input type="hidden" name="id" value="<%=article.id%>"><br>
            <input class=" form-control" type="text" name="title" placeholder="Defina o tÃ­tulo da sua categoria" value="<%=article.title%>"><br>
            <!-- <h2><%=article.body %></h2> -->
            <textarea id="article" class="form-control" placeholder="Escreva o seu artigo aqui!" name="body"><%=article.body %></textarea><br>
            <select name="category" class="form-control"><% category.forEach((category)=>{ %> 
                <option value="<%= category.id %>" <% if (category.id === article.category.id) { %> selected <% } %>><%= category.title %></option>
                <h3><%=article.category.id %></h3>
            <% }) %>
            </select><br>
            <button class="btn btn-success">Alterar</button>
        </form>
    </div>

</div>
</div>
